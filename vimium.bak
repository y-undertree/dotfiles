:root {
   --vim-background: #1d1f21;
   --vim-current-line: #282a2e;
   --vim-selection: #373b41;
   --vim-foreground: #c5c8c6;
   --vim-comment: #969896;
   --vim-red: #cc6666;
   --vim-orange: #de935f;
   --vim-yellow: #f0c674;
   --vim-green: #b5bd68;
   --vim-aqua: #8abeb7;
   --vim-blue: #81a2be;
   --vim-purple: #b294bb;
}

