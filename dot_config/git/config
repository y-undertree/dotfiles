[user]
  name = y.kinoshita
  email = undertree.ys@gmail.com

[core]
  autocrlf = false
  ignorecase = false
  difftool = true
  pager = delta
  editor = /usr/local/bin/nvim

[color]
  ui = true

[alias]
  merge-no-ff = merge --no-ff
  merge-ours = merge -X ours
  merge-theirs = merge -X theirs
  pbcopy = !printf "$1" | pbcopy

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  navigate = true
  line-numbers = true
  hyperlinks = true
  hyperlinks-file-link-format = "file-line://{path}:{line}"
  ; features = decorations

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
  indentHeuristic = true

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process

[merge]
  ff = false
  tool = smerge
  conflictStyle = zdiff3

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "smerge"]
  cmd = smerge mergetool "$BASE" "$LOCAL" "$REMOTE" -o "$MERGED"

[pull]
  ff = only

[diff]
  indentHeuristic = true
  colorMoved = default
  tool = difftastic

[difftool]
  prompt = false


[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[init]
	defaultBranch = main
